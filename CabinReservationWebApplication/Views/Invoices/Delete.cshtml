@model CabinReservationWebApplication.Models.Invoice

@{
    ViewData["Title"] = "Poista lasku";
    var dateOfExpiry = Model.DateOfExpiry.ToString("dd'.'MM'.'yyyy");
}

<h1>Poista lasku</h1>

<br />
<h3>Haluatko varmasti poistaa laskun?</h3>
<div>
    <br />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CabinReservation.Cabin.Resort.ResortName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CabinReservation.Cabin.Resort.ResortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CabinReservation.Cabin.CabinName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CabinReservation.Cabin.CabinName)
        </dd>
        <dt class="col-sm-2">
            Laskunsaaja
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CabinReservation.Person.FirstName) @Html.DisplayFor(model => model.CabinReservation.Person.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfExpiry)
        </dt>
        <dd class="col-sm-10">
            @dateOfExpiry
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceTotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceTotalAmount) €
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaidYesNo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.PaidYesNo)
            {
                <label>Kyllä</label>
            }
            @if (!Model.PaidYesNo)
            {
                <label>Ei</label>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="InvoiceId" />
        <input type="submit" value="Poista" class="btn btn-danger" />
    </form>
    <br />
    @*<button onclick="window.history.go(-1);" class="btn btn-secondary">Takaisin</button>*@
    <a asp-action="Index" class="btn btn-secondary">Takaisin</a>
</div>
