@model CabinReservationWebApplication.Models.Cabin

@{
    ViewData["Title"] = "Lisää majoituspaikka";
}
<h1>Lisää majoituspaikka</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Toimipiste</label>
                <select asp-for="ResortId" class="form-control" asp-items="@ViewBag.Resorts"></select>
            </div>
            @if (User.IsInRole("Administrator"))
            {
                <div class="form-group">
                    <label>Omistaja</label>
                    <select asp-for="PersonId" class="form-control" asp-items="@ViewBag.Persons"></select>
                </div>
            }
            @if (User.IsInRole("CabinOwner"))
            {
                <input asp-for="PersonId" class="form-control" value="@ViewBag.PersonId" type="hidden" />
            }

            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <select asp-for="PostalCode" class="form-control" asp-items="@ViewBag.PostalCodes"></select>
            </div>
            <div class="form-group">
                <label asp-for="CabinName" class="control-label"></label>
                <input asp-for="CabinName" class="form-control" />
                <span asp-validation-for="CabinName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CabinPricePerDay" class="control-label"></label>
                <input asp-for="CabinPricePerDay" class="form-control" />
                <span asp-validation-for="CabinPricePerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="6" cols="50"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rooms" class="control-label"></label>
                <input asp-for="Rooms" class="form-control" />
                <span asp-validation-for="Rooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lisää" class="btn btn-primary" />
            </div>
        </form>
        @*<button onclick="window.history.go(-1);" class="btn btn-secondary">Takaisin</button>*@
        <a asp-action="Index" class="btn btn-secondary">Takaisin</a>
    </div>
</div>