        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CabinPricePerDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
