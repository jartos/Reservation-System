<div>
    <br />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CabinName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CabinName)
        </dd>
        <dt class="col-sm-2">
            Toimipiste
        </dt>
