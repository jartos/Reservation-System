            Omistaja
        </dt>
        <dd class="col-sm-10">
            @Model.Person.FirstName  @Model.Person.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class="col-sm-2">
